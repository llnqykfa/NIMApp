<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/about_qy_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_applogo"
            android:gravity="center_horizontal"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/about_qy_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_selector_bg_1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="关于福建足球"
            android:src="@drawable/ic_update_app" />

        <TextView
            android:id="@+id/tv_up_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:text="新版本更新"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/about_qy_new_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="关于福建足球"
            android:src="@drawable/ic_update_new"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="50px">

        <TextView
            android:id="@+id/copyright_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="©2016 fjfootball.cn"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/copyright_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_below="@id/copyright_name"
            android:text="厦门市南大雄伟科技有限公司"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>