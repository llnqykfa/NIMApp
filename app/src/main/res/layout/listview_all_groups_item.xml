<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/listview_selector_bg_1">

        <ImageView
            android:id="@+id/all_group_item_img"
            android:layout_width="106dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/imgview_content_description"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/all_group_item_img"
            android:layout_toRightOf="@+id/all_group_item_img">

            <TextView
                android:id="@+id/all_groups_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/all_groups_item_time"
                android:layout_toStartOf="@+id/all_groups_item_time"
                android:ellipsize="end"
                android:maxEms="7"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="646546465"
                android:textColor="#202020"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/all_groups_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/all_groups_item_title"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:text="6846"
                android:textColor="#8d8d8d"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/all_groups_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_layout"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/all_group_item_img"
            android:layout_toRightOf="@+id/all_group_item_img"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxEms="13"
            android:maxLines="2"
            android:text="如此这般循环往复了三年，我终在佛祖前发下重誓：此生永不复见。"
            android:textColor="#6a6a6a"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/relat_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/all_groups_item_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/all_group_item_img"
            android:background="@drawable/relativelayout"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/text_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="未分类"
                android:textSize="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp">

                <ImageView
                    android:id="@+id/all_groups_item_review_ic"
                    android:layout_width="13dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/imgview_content_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_review" />

                <TextView
                    android:id="@+id/all_groups_item_review_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="10"
                    android:textColor="#607282"
                    android:textSize="11sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/point_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <ImageView
                    android:id="@+id/all_groups_item_point_like"
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="3dp"
                    android:contentDescription="@string/imgview_content_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_point_like_press" />

                <TextView
                    android:id="@+id/all_groups_item_point_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="20"
                    android:textColor="#607282"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_tabtype"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:src="@drawable/img_ring_hot"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>