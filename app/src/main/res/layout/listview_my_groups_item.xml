<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selector_bg_1"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >

        <LinearLayout
            android:id="@+id/my_groups_item_container_1"
            android:layout_width="80dp"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/my_groups_item_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:text="27"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_groups_item_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1月"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_groups_item_container_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="visible"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_groups_item_day_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textSize="@dimen/text_20"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_2" >

        <ImageView
            android:id="@+id/my_groups_item_ivShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <TextView
        android:id="@+id/my_groups_item_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:ems="13"
        android:maxLines="3" />

</LinearLayout>