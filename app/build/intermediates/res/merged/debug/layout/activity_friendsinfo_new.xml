<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:background="@drawable/friendinf_bg"
                    >
                    <RelativeLayout
                        android:id="@+id/relativeLayout9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_title_height"
                        >

                        <RelativeLayout
                            android:id="@+id/top_back_bg"
                            android:layout_width="48dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/top_bar_back"
                                android:layout_width="19dp"
                                android:layout_height="17dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/back_false" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/top_bar_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="详细资料"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_text_size" />


                        <ImageView
                            android:id="@+id/top_bar_right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/icon_show_more"
                            android:visibility="visible" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relativeLayout13"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:paddingTop="10dp"
                        >
                        <com.nzy.nim.view.RoundImageView
                            android:id="@+id/friendsinfo_iv_friendsimg"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:src="@drawable/pic_default_head"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"/>

                        <RelativeLayout
                            android:id="@+id/relativeLayout12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/friendsinfo_iv_friendsimg"
                            android:layout_centerHorizontal="true"
                            >

                            <TextView
                                android:id="@+id/friendinfo_tv_nameMark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textSize="19sp" />

                            <ImageView
                                android:id="@+id/friendinfo_iv_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="6dp"
                                android:layout_toRightOf="@+id/friendinfo_tv_nameMark"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_remarks"
                            android:layout_width="wrap_content"
                            android:layout_height="32.5dp"
                            android:layout_below="@+id/relativeLayout12"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:text="昵称："
                                android:textColor="#ffffff"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/nickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textView15"
                                android:textColor="#ffffff"
                                android:textSize="14sp" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/sl_all_bg">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="个性签名"
                        android:textColor="#AA484848"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/friendsinfo_tv_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dp"
                        android:text=""
                        android:textSize="@dimen/text_15" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_line1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/sl_all_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="兴趣爱好"
                        android:textColor="#AA484848"
                        android:textSize="@dimen/text_16" />
                    <com.nzy.nim.view.FlowLayout
                        android:id="@+id/friendsinfo_tv_hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_line1" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/sl_all_bg">

                    <RelativeLayout
                        android:id="@+id/rel_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="6dp"
                            android:paddingTop="12dp"
                            android:text="我的组圈"
                            android:textColor="#AA484848"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/id_recyclerview_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_below="@+id/rel_names"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#ffffff"
                        android:scrollbars="none"
                        />

                    <LinearLayout
                        android:id="@+id/ll_tv_ringinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="100dp"
                        android:animateLayoutChanges="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp" />

                    <TextView
                        android:id="@+id/tv_ring_ignore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_tv_ringinfo"
                        android:gravity="center"
                        android:text="..."
                        android:textSize="18dp"
                        android:visibility="gone" />

                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="45dp"
                    android:background="#D9D9D9" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9">

            <Button
                android:id="@+id/friendsinfo_btn_sendMsg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sl_btn"
                android:text="发起会话"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>