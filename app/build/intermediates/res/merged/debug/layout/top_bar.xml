<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/above_all"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/title_bg" >

    <ImageView
        android:id="@+id/top_bar_backIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text_size"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/top_back_bg"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/top_bar_back"
            android:layout_centerInParent="true"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_false"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/top_bar_content"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/title"
        android:gravity="center"
        android:textColor="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/top_bar_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:paddingRight="5dp"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/top_bar_next_iv"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@mipmap/circle_setting"
        android:visibility="invisible" />

</RelativeLayout>