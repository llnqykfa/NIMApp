<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <LinearLayout
        android:id="@+id/make_ring_first_topbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical" >

        <include layout="@layout/top_bar" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/make_ring_first_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/make_ring_first_topbar"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/make_ring_first_img"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="@drawable/bg_make_ring_first"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c9c9c9"
                android:id="@+id/textView26"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/make_ring_first_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColorHint="#bababa"
                android:textSize="15sp"
                android:textColor="#000000"
                android:background="@drawable/shape_group_"
                android:ems="10"
                android:hint="@string/input_ring_name"

                android:paddingLeft="20dp"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>